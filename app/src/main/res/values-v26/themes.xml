        <item name="android:textColorHighlight">@color/material_pink_200</item>
        <item name="android:textColorLink">?colorPrimary</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeCloseDrawable">@drawable/ic_navigation_close</item>

        <item name="selectedColorPrimary">?colorPrimary</item>

        <item name="chipStyle">@style/Widget.App.Chip.Choice</item>
        <item name="itemShapeAppearance">@style/ShapeAppearance.Material3.MediumComponent</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>
