<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.SagerNet.Dynamic" parent="Theme.SagerNet">
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

        <item name="colorPrimary">@android:color/system_accent1_600</item>
        <item name="colorOnPrimary">@android:color/system_neutral1_0</item>
        <item name="colorPrimaryContainer">@android:color/system_accent1_100</item>
        <item name="colorOnPrimaryContainer">@android:color/system_accent1_900</item>
        <item name="colorSecondary">@android:color/system_accent2_600</item>
        <item name="colorOnSecondary">@android:color/system_neutral1_0</item>
        <item name="colorSecondaryContainer">@android:color/system_accent2_100</item>
        <item name="colorOnSecondaryContainer">@android:color/system_accent2_900</item>
        <item name="colorTertiary">@android:color/system_accent3_600</item>
        <item name="colorOnTertiary">@android:color/system_neutral1_0</item>
        <item name="colorTertiaryContainer">@android:color/system_accent3_100</item>
        <item name="colorOnTertiaryContainer">@android:color/system_accent3_900</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeCloseDrawable">@drawable/close</item>

        <item name="selectedColorPrimary">?colorPrimary</item>

        <item name="chipStyle">@style/Widget.App.Chip.Choice</item>
        <item name="itemShapeAppearance">@style/ShapeAppearance.Material3.MediumComponent</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>
    </style>

    <style name="Theme.SagerNet.Dialog.Dynamic" parent="Theme.Material3.DayNight.Dialog.Alert">
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

        <item name="colorPrimary">@android:color/system_accent1_600</item>
        <item name="colorOnPrimary">@android:color/system_neutral1_0</item>
        <item name="colorPrimaryContainer">@android:color/system_accent1_100</item>
        <item name="colorOnPrimaryContainer">@android:color/system_accent1_900</item>
        <item name="colorSecondary">@android:color/system_accent2_600</item>
        <item name="colorOnSecondary">@android:color/system_neutral1_0</item>
        <item name="colorSecondaryContainer">@android:color/system_accent2_100</item>
        <item name="colorOnSecondaryContainer">@android:color/system_accent2_900</item>
        <item name="colorTertiary">@android:color/system_accent3_600</item>
        <item name="colorOnTertiary">@android:color/system_neutral1_0</item>
        <item name="colorTertiaryContainer">@android:color/system_accent3_100</item>
        <item name="colorOnTertiaryContainer">@android:color/system_accent3_900</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeCloseDrawable">@drawable/close</item>

        <item name="selectedColorPrimary">?colorPrimary</item>

        <item name="chipStyle">@style/Widget.App.Chip.Choice</item>
        <item name="itemShapeAppearance">@style/ShapeAppearance.Material3.MediumComponent</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowFixedHeightMajor" type="dimen">95%</item>
    </style>
</resources>
